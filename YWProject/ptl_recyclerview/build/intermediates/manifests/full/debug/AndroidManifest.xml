<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yw.ptl_recyclerview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.yw.ptl_recyclerview.PtlApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.yw.ptl_recyclerview.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yw.ptl_recyclerview.LinearManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yw.ptl_recyclerview.GridManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yw.ptl_recyclerview.StaggredGridManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yw.ptl_recyclerview.AutoLoadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yw.ptl_recyclerview.custom.CustomManagerActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>